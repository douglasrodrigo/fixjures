	<artifactId>fixjures-guice</artifactId>
	<packaging>jar</packaging>
	<name>fixjures-guice</name>
	<description>Guice modules for Fixjures.</description>
	<dependencies>
		<dependency>
			<groupId>com.bigfatgun</groupId>
			<artifactId>fixjures</artifactId>
		</dependency>
		<dependency>
